<?php
class Animal {
    //data
    var $catname;

    //constructor
    function Animal ($name) {
        $this->catname = $name;
    }
    //methods
    function getName () {
        echo "$this->catname <br>";
    }
}

class Cat extends Animal {
    function getName($name)
    {
        parent::getName($name); // TODO: Change the autogenerated stub
    }

    function meow () {
        echo 'Cat ' . $this->catname . ' is saying meow <br>';
    }
}
$cat = new Cat('garfield');
$cat->getName();
$cat->meow();
?>
